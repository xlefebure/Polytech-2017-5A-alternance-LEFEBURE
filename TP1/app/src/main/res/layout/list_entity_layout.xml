<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    tools:context="com.example.xavier.tp1.BeerListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="@dimen/weight3"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ImageBeer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding5"
            app:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="@dimen/weight1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/BeerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginStartMedium"
            android:padding="@dimen/padding5"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textSize="@dimen/font_size_high" />

        <TextView
            android:id="@+id/BeerContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginStartMedium"
            android:paddingStart="@dimen/padding5"
            android:text="TextView" />
    </LinearLayout>


</android.widget.LinearLayout>
